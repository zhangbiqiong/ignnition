{   
    "entities": 
    [
        {
            "name": "link",
            "hidden_state_dimension": 32,
            "features":
            [
                {
                    "name": "link_capacity"
                }
            ]
        },
        {
            "name": "path",
            "hidden_state_dimension": 32,
            "features":
            [
                {
                    "name": "traffic"
                }
            ]
        }
    ],

    "message_passing":
        {
            "num_iterations": 8,

            "architecture":
            [
                {
                    "step_name": "step1",
                    "mp_step":
                    [
                        {
                            "type": "single_source",
                            "source_entity": "link",
                            "destination_entity":"path",
                            "adj_vector": "adj_links_paths",
                            "message":
                            [
                                {
                                    "type": "direct_assignation"
                                }
                            ],
                            "aggregation": "ordered",
                            "update": 
                            {
                                "type": "recurrent_neural_network",
                                "nn_name": "recurrent1"
                            }
                            
                        }
                    ]
                },
                {
                    "step_name": "step2",
                    "mp_step":[
                        {
                            "type": "single_source",
                            "source_entity": "path",
                            "destination_entity":"link",
                            "adj_vector": "adj_paths_links",
                            "message": 
                            [
                                {
                                    "type": "direct_assignation"
                                }
                            ],
                            "aggregation": "sum",
                            "update": 
                            {
                                "type": "recurrent_neural_network",
                                "nn_name": "recurrent1"
                            }
                        }]
                }
            ]
        },


    "readout": 
    [
        {
            "type": "predict",
            "input": "path",
            "label": "delay",
            "label_normalization": "log",
            "nn_name": "readout_model"
        }
    ],


    "neural_networks":
    [
        {
            "nn_name": "readout_model",
            "nn_type": "feed_forward",
            "nn_architecture":
            [
                {
                    "name": "First_dense_layer",
                    "type_layer":"Dense",
                    "units": 256,
                    "kernel_regularizer": 0.1,
                    "activation": "selu"
                },
                {
                    "name": "Second_dense_layer",
                    "type_layer":"Dense",
                    "units": 256,
                    "kernel_regularizer": 0.1,
                    "activation": "selu"
                },
                {
                    "name": "Output_layer",
                    "type_layer":"Dense",
                    "kernel_regularizer": 0.01,
                    "units": 1,
                    "activation": "None"
                }
            ]
        },
        {
            "nn_name":"recurrent1",
            "nn_type": "recurrent_neural_network",
            "recurrent_type": "GRU"
        }
    ],
        
    "learning_options":
    {
        "loss": "MeanSquaredError",
        "optimizer":
        {
            "type": "Adam"
        },
        "schedule": 
        {
            "type": "ExponentialDecay",
            "initial_learning_rate":0.001,
            "decay_steps":80000,
            "decay_rate":0.6
        }
    }

}